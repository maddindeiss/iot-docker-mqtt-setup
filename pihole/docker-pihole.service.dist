[Unit]
Description=PiHole container
Requires=docker.service
After=docker.service

[Service]
Restart=always
ExecStart=/usr/local/bin/docker-compose --project-directory /home/pi/pihole/ -f /home/pi/pihole/docker-compose.yml up
ExecStop=/usr/local/bin/docker-compose --project-directory /home/pi/pihole/ -f /home/pi/pihole/docker-compose.yml stop

[Install]
WantedBy=default.target
